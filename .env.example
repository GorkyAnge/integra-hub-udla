# ===========================================
# IntegraHub - Environment Variables
# ===========================================
# Copy this file to .env and modify as needed
# DO NOT commit .env to version control

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
POSTGRES_USER=integrahub
POSTGRES_PASSWORD=integrahub123
POSTGRES_DB=integrahub

# ===========================================
# MESSAGE BROKER (RabbitMQ)
# ===========================================
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123
RABBITMQ_VHOST=integrahub

# ===========================================
# SECURITY (JWT/OAuth2)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2026!
JWT_EXPIRATION=1h
OAUTH2_CLIENT_ID=integrahub-client
OAUTH2_CLIENT_SECRET=integrahub-secret

# ===========================================
# NOTIFICATIONS (Webhooks)
# ===========================================
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# ===========================================
# KAFKA (Analytics Streaming)
# ===========================================
KAFKA_BROKERS=kafka:9092

# ===========================================
# RESILIENCE CONFIGURATION
# ===========================================
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
REQUEST_TIMEOUT=5000

# ===========================================
# LEGACY PROCESSOR
# ===========================================
CSV_POLL_INTERVAL=10000
